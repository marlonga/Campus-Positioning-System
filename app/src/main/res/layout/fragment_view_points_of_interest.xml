<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HFU_Gray_Ternary"
    tools:context=".Fragments.FavoriteListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/poi_main_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/poi_titel"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="roomname"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/poi_roomnumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="roomnumber"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/poi_description"
            android:layout_width="408dp"
            android:layout_height="277dp"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:typeface="normal" />

    </LinearLayout>

</FrameLayout>